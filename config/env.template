# n8n Shopify Integration - Environment Configuration Template
# Copy this file to .env and fill in your values. Never commit .env to version control.

# n8n Configuration
N8N_INSTANCE_URL=https://your-n8n-instance.com
N8N_API_TOKEN=your_n8n_api_token_here

# Shopify Configuration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_shopify_access_token_here
SHOPIFY_API_VERSION=2024-01

# Multi-tenant stores (uncomment to add)
# SHOPIFY_STORE_URL_TENANT_1=tenant1-store.myshopify.com
# SHOPIFY_ACCESS_TOKEN_TENANT_1=shpat_tenant1_access_token_here

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=n8n_shopify_lib
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL_MODE=require

# Alternative: Supabase
# SUPABASE_URL=https://your-project-id.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Webhook Configuration
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENDPOINT_URL=https://your-domain.com/webhooks/shopify

# Rate Limiting
SHOPIFY_RATE_LIMIT_REQUESTS_PER_SECOND=2
SHOPIFY_RATE_LIMIT_BURST_SIZE=40
EXTERNAL_API_RATE_LIMIT_RPS=10
EXTERNAL_API_RATE_LIMIT_BURST=50

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true
# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
# SENTRY_DSN=https://your-sentry-dsn-here

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
CORS_ORIGIN=https://your-frontend-domain.com

# Cache Configuration
CACHE_TTL_PRODUCTS=300
CACHE_TTL_ORDERS=600
CACHE_TTL_CUSTOMERS=900
CACHE_INVALIDATION_STRATEGY=ttl

# Workflow Configuration
WORKFLOW_TIMEOUT=300
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=60
BATCH_SIZE_ORDERS=50
BATCH_SIZE_PRODUCTS=100
BATCH_PROCESSING_INTERVAL=3600

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@your-domain.com
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#shopify-sync

# Business Logic
BUSINESS_HOURS_START=8
BUSINESS_HOURS_END=18
TIMEZONE=UTC
SYNC_INTERVAL_MINUTES=15

# Multi-tenant
MERCHANT_ID=merchant-001
MERCHANT_DISPLAY_NAME=Your Store Name

# Environment
NODE_ENV=production
TENANT_ID=default
DEPLOYMENT_ID=local
DEBUG=false

# Data Privacy & Compliance
DATA_RETENTION_DAYS=2555
ENABLE_DATA_ANONYMIZATION=true
ENABLE_GDPR_COMPLIANCE=true

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_SCHEDULED_SYNC=true
ENABLE_ORDERS=true
ENABLE_PRODUCTS=true
ENABLE_INVENTORY=true
ENABLE_CUSTOMERS=false

# Performance
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_DELAY_MS=200

# Backup & Archival
ENABLE_ARCHIVAL=false
ARCHIVAL_DAYS=90
# ARCHIVAL_S3_BUCKET=your-archive-bucket
# ARCHIVAL_AWS_REGION=us-east-1